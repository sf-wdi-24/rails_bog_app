<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1 class="text-center">Creatures in the Bog</h1>
		<% @creatures.each do |creature| %>
		<div class="list">
			<p>
				<strong>Name: <a href = "/creatures/<%= creature.id %>"></strong><%= creature.name %></a><br>
				<strong>Description: </strong><%= creature.description %>

			</p>	
		</div>
		<% end %>	
	</div>	
</div>
