<%= render 'partials/navPartial' %>
<%= render 'partials/flashMsg' %>

<div class="callout large primary">
  <div class="column text-center">
    <h1>Scary Creatures</h1>
    <h2 class="subheader">So scary</h2>
  </div>
  <% @creatures.each do |creature| %>
  <div class=" row medium-8 large-7">
    <div class="blog-post">
      <h3><%= link_to creature.name, creature_path(creature) %></h3>
      <figure class="photo">
        <%= image_tag creature.avatar_url(:thumb).to_s %>
      </figure>
      <p class="description"><%= creature.description %></p>
      <div class="callout">
        <div class="menu simple">
          <ul>
            <li class="inline">
              <%= link_to "Delete", creature_path(creature), method: :delete, class:"right button tiny warning" %>
            </li>
            <li class="inline">
              <%= link_to "Edit", edit_creature_path(creature), data:{:"reveal-id" => "editCreatureModal", :"reveal-ajax" => true}, class:"right button tiny warning" %>
            </li>
            <div id="editCreatureModal" class="reveal-modal medium" data-reveal>
              <%= render "partials/editCreature" %>
              <a class="close-reveal-modal">&#215;</a>
            </div>
          </ul>   
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>