<div class="containter">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<h1 class="text-center">Welcome to Creature's World</h1>
			<hr>
			<div class="text-center">
				<a href="/creatures/new"><button class="btn btn-info">Add More Creature</button></a>
			</div>
			<br>
			<div class="row">
				<div class="col-sm-10 col-sm-offset-1">
					<% @creatures.each do |creature| %>
						<div class="row each-creature">
							<div class="col-sm-4">
								<%= image_tag creature.image.url(:thumb) %>
							</div>
							<div class="col-sm-8">
								<h3><strong>Name: </strong><%= creature.name %></h3>
								<p><strong>Description: </strong><%= creature.description %></p>
								<div class="button-wrapper">
									<%= button_to "View", creature_path(creature), method: :get, class: "btn btn-info pull-left", style: "margin-right: 10px" %>
									<%= button_to "Edit", edit_creature_path(creature), method: :get, class: "btn btn-info pull-left", style: "margin-right: 10px" %>
									<%= button_to "Delete", creature, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-info pull-left", style: "margin-right: 10px" %>
								</div>
							</div>
						</div>
						<hr>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>