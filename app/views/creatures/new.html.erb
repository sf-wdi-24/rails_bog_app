<!-- app/views/creatures/new.html.erb -->
<h3>Add a new creature</h3>
<%= form_for @creature, url: creatures_path, html: { multipart: true } do |f| %>
<div class="field">
	<%= f.label :name %>
  <%= f.text_field :name %>
  </div>
  <div class="field">
  <%=f.label :description %>
  <%= f.text_area :description %>
  </div>
  <div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>
  </div>
  <div class="submit">
  <%= f.submit "Save Creature" %>
  </div>
<% end %>