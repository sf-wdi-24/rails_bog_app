<nav class="top-bar">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "BogCreatures", root_path %></h1>
    </li>
  </ul>
  <section class="top-bar-section">
    <ul class="right">
      <li class="divider"></li>
      <% if current_user %>
        <li class="inline">
          <%= link_to current_user.name, root_path %>
        </li>
        <li class="divider"></li>
        <li class="inline">
          <%= link_to 'Logout', logout_path %>
        </li>
        <li class="divider"></li>
        <li><%= link_to new_creature_path, data: {:"reveal-id" => "newCreatureModal", :"reveal-ajax" => true}, class:"style-a" do %>
          <i class="fa fa-plus"></i>
        <% end %>
        </li>
      <% else %>
        <li class="inline">
          <%= link_to 'Sign Up',signup_path %>
        </li>
        <li class="divider"></li>
        <li class="inline"><%= link_to "Login", login_path %></li>
      <% end %>
    </ul>
  </section>
</nav>
  <section>
    <div id="newCreatureModal" class="reveal-modal "data-reveal>
      <%= render "partials/newCreature" %>
      <a class="close-reveal-modal">&#215;</a>
    </div>
  </section>