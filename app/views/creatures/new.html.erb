<h1>Add a New Creature</h1>
<br>

<%= form_for @creature, html: {multipart: true} do |f| %>

  <div class="form-group">
    <%= f.label :image, placeholder: "Image" %>
    <br>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.text_area :name, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Creature", class: "btn btn-block btn-default" %>
  </div>

</form>

<% end %>
<%= link_to 'Back to Main Page', {:action => 'index'} %>

