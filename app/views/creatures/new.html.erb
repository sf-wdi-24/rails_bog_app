<h1 class="text-center">New Creature</h1>
<!-- #this should be the new form -->
<%= form_for @creature, html: { multipart: true } do |f| %> 
<div class="form-group">
	<%= f.file_field :image, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.text_field :name, placeholder: "Name", autofocus: true, class: "form-control" %>
</div>
<div class="form-group">
	<%= f.text_field :description, placeholder: "Description", class: "form-control" %>
</div>
<%= f.submit "Save Creature", class: "btn btn-block btn-primary" %>
<% end %>