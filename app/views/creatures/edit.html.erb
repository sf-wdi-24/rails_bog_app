<div class="row">
	<div class="col-md-4 col-offset-md-4">
		<h1>Edit Creature</h1>
		<hr>
		<%= form_for @creature do |f| %>
			<div class ="form-group">
		  		<%= f.text_field :name , class: "form-control" %>
		  	</div>
		  	<div class ="form-group">
		  		<%= f.text_area :description, class: "form-control" %>
		  	</div>
		  	<div class="form-group">
				<%= f.label :image %>
		  		<%= f.file_field :image %>
			</div>
			<%= f.submit "Save Creature", class: "btn btn-block btn-primary" %>
		<% end %>	
	</div>
</div>		
