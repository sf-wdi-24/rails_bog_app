<div class="container text-center">
		<h1>The Bog</h1>
		<% @creatures.each do |creature| %>
			<div class="row">
				<div class="col-md-2 col-md-offset-3"><%= image_tag creature.image.url(:thumb) %></div>
				<h3 class="col-md-4 text-left">
					<strong>Name:</strong> <%= creature.name %><br>
					<strong>Description:</strong> <%= creature.description %>
				</h3>
				<div class="col-md-3 text-left"><%= link_to "Edit", edit_creature_path(creature) %></div>
				<div class="col-md-3 text-left"><%= link_to "Delete", creature, method: :delete %></div>
			</div>
		<% end %>
		<br>
		<div class="row">
			<div class="col-md-4 col-md-offset-3 text-left">
				<h2><%= link_to "Create New Creature", new_creature_path %></h2>
			</div>
		</div>
</div>